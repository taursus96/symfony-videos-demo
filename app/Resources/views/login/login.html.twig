{% extends 'base.html.twig' %}

{% block body %}
    {% if error %}
        <div class="alert alert-warning">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <form action="{{ path('login') }}" method="post" class="form-login">
        <h1>
            {{ "header"|trans([], "login") }}
        </h1>
        <br/>
        <div class="form-group">
            <label for="username">{{ "user.username"|trans([], "login") }}</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control"/>
        </div>

        <div class="form-group">
            <label for="password">{{ "user.password"|trans([], "login") }}</label>
            <input type="password" id="password" name="_password" class="form-control"/>
        </div>

        <input type="hidden" name="_target_path" value="/"/>

        <button type="submit" class="btn btn-primary form-control">{{ "user.submit"|trans([], "login") }}</button>
    </form>
{% endblock %}
