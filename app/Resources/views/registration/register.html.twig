{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form, {'attr': {'class': 'form-registration'}}) }}
    <h1>
        {{ "header"|trans([], "registration") }}
    </h1>
    <br/>
    <div class="form-group">
        <label>
            {{ "user.username"|trans([], "registration") }}
        </label>
        {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.username) }}
    </div>
    <div class="form-group">
        <label>
            {{ "user.email"|trans([], "registration") }}
        </label>
        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.email) }}
    </div>

    <div class="form-group">
        <label>
            {{ "user.password"|trans([], "registration") }}
        </label>
        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.plainPassword.first) }}
    </div>

    <div class="form-group">
        <label>
            {{ "user.password.repeat"|trans([], "registration") }}
        </label>
        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.plainPassword.second) }}
    </div>

    <button type="submit" class="btn btn-primary form-control">{{ "user.submit"|trans([], "registration") }}</button>
    {{ form_end(form) }}
{% endblock %}
